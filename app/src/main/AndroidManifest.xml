<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sd.rafael.sweetdreams">

    <uses-permission android:name="android.permission.RECORD_AUDIO"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.FormDreamsActivity"
            android:label="@string/form_activity"
            android:windowSoftInputMode="stateHidden"
            android:parentActivityName=".activity.DreamsActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.DreamsActivity" />
        </activity>
        <activity
            android:name=".activity.DreamsActivity"
            android:label=""
            android:launchMode="singleTask"
            android:parentActivityName=".activity.MainNavDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainNavDrawerActivity" />
        </activity>
        <activity
            android:name=".activity.MainNavDrawerActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.SettingsActivity"
            android:label="@string/settings_activity"
            android:parentActivityName=".activity.MainNavDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainNavDrawerActivity" />
        </activity>
        <activity
            android:name=".activity.CalendarActivity"
            android:label="@string/calendar_activity"
            android:parentActivityName=".activity.MainNavDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainNavDrawerActivity" />
        </activity>
        <activity
            android:name=".activity.FavoriteActivity"
            android:label="@string/favorite_activity"
            android:parentActivityName=".activity.MainNavDrawerActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.MainNavDrawerActivity" />
        </activity>
        <activity
            android:name=".activity.BaseActivity"
            android:label="@string/title_activity_base"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.SameDayActivity"
            android:label=""
            android:parentActivityName=".activity.CalendarActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activity.CalendarActivity" />
        </activity>
    </application>

</manifest>